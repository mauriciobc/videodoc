{
  "name": "videodoc-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "test": "node --test packages/core/src/voiceover/extract-captions.test.js packages/core/src/playwright/helpers.test.js",
    "lint": "ESLINT_USE_FLAT_CONFIG=1 eslint packages/*/src/**/*.js",
    "release": "changeset publish",
    "docs:screenshots": "playwright test docs-automation/journeys/ -c docs-automation/playwright.config.js",
    "docs:preview": "npx remotion preview docs-automation/Root.jsx",
    "docs:render": "node docs-automation/render.mjs",
    "docs:voiceover": "node packages/core/src/voiceover/voiceover-pipeline.js docs-automation/compositions/AuthFlow.jsx --output=docs-output/audio",
    "docs:generate": "npm run docs:screenshots && npm run docs:render"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@eslint/js": "^8.57.0",
    "@google-cloud/text-to-speech": "^6.4.0",
    "@playwright/test": "^1.49.0",
    "@remotion/cli": "^4.0.424",
    "dotenv": "^17.3.1",
    "eslint": "^8.57.0",
    "ffmpeg-static": "^5.3.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "remotion": "^4.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
